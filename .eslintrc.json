{ 
  "parserOptions": {
      "ecmaVersion": 9
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
      "semi": "error",
      "indent": ["error", 2],
      "@typescript-eslint/no-var-requires": "warn"
  },
  "env": {
      "node": true,
      "browser": true
  },
  "plugins": [
    "@typescript-eslint"
  ]
}